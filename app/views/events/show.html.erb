<div class='h1'>
  <%= @event.name %>
</div>

<div class='card mt-3'>
  <div class='card-header'>
    主催者
  </div>
  <div class="card-body">
    <%= link_to("https://twitter.com/#{@event.owner.nickname}", class: 'card-link text-dark') do %>
      <%= image_tag @event.owner.image_url %>
      <%= "@#{@event.owner.nickname}" %>
    <% end %>
  </div>
</div>
<div class='card mt-3'>
  <div class='card-header'>
    開催時間
  </div>
  <div class="card-body">
      <%= l @event.start_time, format: :full_date %> - <%= l @event.end_time, format: :full_date %>
  </div>
</div>
<div class='card mt-3'>
  <div class='card-header'>
    開催場所
  </div>
  <div class="card-body">
      <%= @event.place %>
  </div>
</div>
<div class='card mt-3'>
  <div class='card-header'>
    イベント内容
  </div>
  <div class="card-body">
      <%= @event.content %>
  </div>
</div>
